<Window x:Class="students.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:students.Windows"
        mc:Ignorable="d"
        Title="Window1" Height="486" Width="1076.804">
    <Grid Margin="0,0,12,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="646*"/>
            <ColumnDefinition Width="369*"/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="products" Margin="2,10,-12,-11" RenderTransformOrigin="0.519,0.505" Background="#FFDFE1E6" Grid.ColumnSpan="2">
            <TabItem x:Name="smartphonesTab" Header="Степендия">
                <TabItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13*"/>
                            <ColumnDefinition Width="78*"/>
                            <ColumnDefinition Width="928*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid AutoGenerateColumns="false" x:Name="uslygi" Margin="10,10,0,0" HorizontalAlignment="Left" Width="701" Height="312" VerticalAlignment="Top" IsReadOnly="True" SelectionChanged="Uslygi_SelectionChanged" Grid.ColumnSpan="3">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding id_Vedomost}" Header="Код" Width="60"/>
                                <DataGridTextColumn Binding="{Binding FIOVd}" Header="ФИО" Width="*"/>
                                <DataGridTextColumn Binding="{Binding Spec}" Header="Специальность" Width="*"/>
                                <DataGridTextColumn Binding="{Binding Kyrs}" Header="Курс" Width="50"/>
                                <DataGridTextColumn Binding="{Binding Minball}" Header="Мин.Балл" Width="70"/>
                                <DataGridTextColumn Binding="{Binding MidBall}" Header="Средний Балл" Width="*"/>
                                <DataGridTextColumn Binding="{Binding YdbStp}" Header="Удвоенная степендия" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Удалить" HorizontalAlignment="Left" Width="101" x:Name="udal"  Margin="761,318,0,0" Height="30" VerticalAlignment="Top" Click="udal_Click_1" Grid.Column="2"  />
                        <Button Content="Отмена" HorizontalAlignment="Left" Width="104" x:Name="Otmena" Margin="638,278,0,0" Height="30" VerticalAlignment="Top" IsEnabled="False" Click="Otmena_Click" Grid.Column="2" />
                        <Button Content="Редактировать" HorizontalAlignment="Left" Width="101" x:Name="red"  Margin="642,321,0,0" Height="30" VerticalAlignment="Top" Click="red_Click" Grid.Column="2" />
                        <Button Content="Добавить " HorizontalAlignment="Right" Width="243" x:Name="Novusl"  Margin="0,13,57,303" Click="Novusl_Click" Grid.Column="2"/>
                        <Button Content="ОК" HorizontalAlignment="Left" Width="104" x:Name="Ok" Margin="761,280,0,0" Height="30" VerticalAlignment="Top" Click="Ok_Click_2" IsEnabled="False" Grid.Column="2"/>
                        <Label Content="ФИО" HorizontalAlignment="Left" x:Name="Nazv" Margin="621,55,0,0" Width="134" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.Column="2"/>
                        <TextBox x:Name="nazvUsl" HorizontalAlignment="Left" Width="143" Margin="624,74,0,0" Height="29" VerticalAlignment="Top" IsEnabled="False" PreviewTextInput="NazvUsl_PreviewTextInput" Grid.Column="2"/>
                        <Label Content="Специальность" HorizontalAlignment="Left" x:Name="cena" Width="119" Margin="624,101,0,0" FontSize="12" FontFamily="Times New Roman" Height="27" VerticalAlignment="Top" Grid.Column="2"/>
                        <Label Content="Kурс" HorizontalAlignment="Left" x:Name="razmer" Margin="625,155,0,0" Width="134" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.Column="2"/>
                        <TextBox x:Name="tb_nalog" HorizontalAlignment="Left" Width="142" Margin="627,179,0,0" Height="29" VerticalAlignment="Top" IsEnabled="False" TextChanged="Tb_nalog_TextChanged" KeyDown="Tb_nalog_KeyDown" PreviewTextInput="Tb_nalog_PreviewTextInput" Grid.Column="2"/>
                        <TextBox x:Name="Specal" HorizontalAlignment="Left" Width="143" Margin="625,124,0,0" Height="29" VerticalAlignment="Top" IsEnabled="False" PreviewTextInput="NazvUsl_PreviewTextInput" Grid.Column="2"/>
                        <Label Content="Минимальный бал" HorizontalAlignment="Left" x:Name="razmer_Copy" Margin="627,208,0,0" Width="134" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.Column="2"/>
                        <TextBox x:Name="tb_nalog_Copy" HorizontalAlignment="Left" Width="142" Margin="626,231,0,0" Height="29" VerticalAlignment="Top" IsEnabled="False" TextChanged="Tb_nalog_TextChanged" KeyDown="Tb_nalog_KeyDown" PreviewTextInput="Tb_nalog_PreviewTextInput" Grid.Column="2"/>
                        <Label Content="Средний балл" HorizontalAlignment="Left" x:Name="Nazv_Copy" Margin="780,54,0,0" Width="134" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.Column="2"/>
                        <Label Content="Удвоенная степендия" HorizontalAlignment="Left" x:Name="Nazv_Copy1" Margin="781,101,0,0" Width="134" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.Column="2"/>
                        <TextBox x:Name="nazvUsl_Copy" HorizontalAlignment="Left" Width="143" Margin="775,72,0,0" Height="29" VerticalAlignment="Top" IsEnabled="False" PreviewTextInput="NazvUsl_PreviewTextInput" Grid.Column="2"/>
                        <TextBox x:Name="nazvUsl_Copy1" HorizontalAlignment="Left" Width="143" Margin="776,121,0,0" Height="29" VerticalAlignment="Top" IsEnabled="False" PreviewTextInput="NazvUsl_PreviewTextInput" Grid.Column="2"/>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="tabletsTab" Header="Студенты">
                <TabItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24*"/>
                            <ColumnDefinition Width="937*"/>
                            <ColumnDefinition Width="58*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid AutoGenerateColumns="False" x:Name="klient" Margin="10,10,0,0" HorizontalAlignment="Left" Width="572" Height="331" VerticalAlignment="Top" IsReadOnly="True" Grid.ColumnSpan="2">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Student_ID}" Header="ID" Width="25"/>
                                <DataGridTextColumn Binding="{Binding FIO}" Header="Фамилия" Width="110"/>
                                <DataGridTextColumn Binding="{Binding Sex}" Header="Пол" Width="60"/>
                                <DataGridTextColumn Binding="{Binding Kyrs}" Header="Курс" Width="60"/>
                                <DataGridTextColumn Binding="{Binding ZachNumber}" Header="Номер зачетки" Width="110"/>
                                <DataGridTextColumn Binding="{Binding Passport}" Header="Группа" Width="80"/>
                                <DataGridTextColumn Binding="{Binding Form_Study}" Header="Форма обучения" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Удалить" HorizontalAlignment="Left" Width="89" x:Name="delit" Margin="681,311,0,0" Height="30" VerticalAlignment="Top" Click="delit_Click" Grid.Column="1"  />
                        <Button Content="Отмена" HorizontalAlignment="Left" Width="104" x:Name="Otm"  Margin="787,308,0,0" Height="30" VerticalAlignment="Top" Click="Otm_Click" IsEnabled="False" Grid.Column="1" />
                        <Button Content="Редактировать" HorizontalAlignment="Left" Width="91" x:Name="redak"  Margin="574,312,0,0" Height="30" VerticalAlignment="Top" Click="redak_Click" Grid.Column="1" />
                        <Button Content="ОК" HorizontalAlignment="Left" Width="81" x:Name="OK"  Margin="902,304,0,0" Height="30" VerticalAlignment="Top" Click="OK_Click" IsEnabled="False" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <Button Content="Новый Студент" HorizontalAlignment="Left" Width="225" x:Name="klien"  Margin="570,15,0,0" Height="34" VerticalAlignment="Top" Click="klien_Click" Grid.Column="1"/>
                        <Label Content="ФИО" x:Name="Naz" Margin="571,47,119,0" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBox x:Name="FIO" HorizontalAlignment="Left" Width="198" Margin="574,74,0,0" Height="29" VerticalAlignment="Top" IsEnabled="False" Grid.Column="1" PreviewTextInput="FIO_PreviewTextInput"/>
                        <Label Content="Курс" HorizontalAlignment="Left" x:Name="Adr" Width="227" Margin="571,112,0,0" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBox x:Name="Adres" HorizontalAlignment="Left" Width="198" Margin="577,138,0,0" Height="30" VerticalAlignment="Top" IsEnabled="False" Grid.Column="1"/>
                        <Label Content="Номер зачетки" HorizontalAlignment="Left" x:Name="nomer" Width="227" Margin="781,117,-13,0" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="Nomer" HorizontalAlignment="Left" Width="197" Margin="786,139,0,0" Height="30" VerticalAlignment="Top" IsUndoEnabled="True" IsEnabled="False" Grid.Column="1" PreviewTextInput="Nomer_PreviewTextInput" Grid.ColumnSpan="2"/>
                        <Label Content="Группа" HorizontalAlignment="Left" x:Name="passport" Width="227" Margin="573,178,0,0" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBox x:Name="passport1" HorizontalAlignment="Left" Width="200" Margin="579,203,0,0" Height="30" VerticalAlignment="Top" IsUndoEnabled="True" IsEnabled="False" Grid.Column="1" PreviewTextInput="Passport1_PreviewTextInput"/>
                        <TextBox x:Name="FIO2" HorizontalAlignment="Left" Width="200" Margin="787,77,0,0" Height="29" VerticalAlignment="Top" IsEnabled="False" Grid.ColumnSpan="2" Grid.Column="1" PreviewTextInput="FIO2_PreviewTextInput"/>
                        <Label Content="Пол" x:Name="Naz2" Margin="794,48,-51,0" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <TextBox x:Name="Nomer_Copy" HorizontalAlignment="Left" Width="197" Margin="789,206,0,0" Height="30" VerticalAlignment="Top" IsUndoEnabled="True" IsEnabled="False" Grid.Column="1" PreviewTextInput="Nomer_PreviewTextInput" Grid.ColumnSpan="2"/>
                        <Label Content="Форма обучения" HorizontalAlignment="Left" x:Name="nomer_Copy1" Width="227" Margin="789,181,-21,0" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="2"/>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="Zakaz" Header="Список экзаменов">
                <TabItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="471*"/>
                            <ColumnDefinition Width="217*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid AutoGenerateColumns="False" x:Name="zakaza" Margin="10,10,0,0" HorizontalAlignment="Left" Width="615" Height="319" VerticalAlignment="Top" IsReadOnly="True" SelectionChanged="zakaza_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding NumbEx}" Header="Код предмета" Width="*"/>
                                <DataGridTextColumn Binding="{Binding DataEx}" Header="Дата экзамена" Width="*"/>
                                <DataGridTextColumn Binding="{Binding Predmet}" Header="Название предмета" Width="*"/>
                                <DataGridTextColumn Binding="{Binding Prepodovatel}" Header="Преподователь" Width="*"/>
                                <DataGridTextColumn Binding="{Binding FioStydEx}" Header="Фио студента" Width="*"/>
                                <DataGridTextColumn Binding="{Binding Mark}" Header="Оценка" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Новый Экзамен" Width="243" HorizontalAlignment="Center" Margin="24,13,54,0" x:Name="Novzak" Height="30" VerticalAlignment="Top" Click="Novzak_Click" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-0.052"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Button.RenderTransform>
                        </Button>
                        <Label Content="Название предмета" FontSize="12" FontFamily="Times New Roman" Margin="639,48,0,0" HorizontalAlignment="Left" Width="121" Height="31" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                        <TextBox Height="23" TextWrapping="Wrap" Text="" Width="120" Grid.ColumnSpan="2" Margin="646,71,253,266"/>
                        <Label Content="Дата экзамена" FontSize="12" FontFamily="Times New Roman" HorizontalAlignment="Left" Margin="646,106,0,0" Width="113" Height="31" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                        <Label Content="Преподователь" FontSize="12" FontFamily="Times New Roman" HorizontalAlignment="Left" Margin="643,170,0,0" Width="116" Height="33" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                        <Button Content="ОК" HorizontalAlignment="Left" Width="114" x:Name="ok" Margin="156,285,0,0" Height="31" VerticalAlignment="Top" Click="ok_Click_1" IsEnabled="False" Grid.Column="1"/>
                        <Button Content="Отмена" HorizontalAlignment="Left" Width="143" x:Name="Otmen" Margin="661,285,0,0" IsEnabled="False" Click="Otmen_Click" Height="28" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                        <TextBox Height="23" TextWrapping="Wrap" Text="" Width="120" Grid.ColumnSpan="2" Margin="647,143,252,194"/>
                        <TextBox Height="23" TextWrapping="Wrap" Text="" Width="120" Grid.ColumnSpan="2" Margin="648,198,251,139"/>
                        <TextBox Height="23" TextWrapping="Wrap" Text="" Width="120" Margin="109,71,92,266" Grid.Column="1"/>
                        <TextBox Height="23" TextWrapping="Wrap" Text="" Width="120" Margin="104,146,97,191" Grid.Column="1"/>
                        <Label Content="Фио студента" FontSize="12" FontFamily="Times New Roman" Margin="105,47,0,0" HorizontalAlignment="Left" Width="121" Height="31" VerticalAlignment="Top" Grid.Column="1"/>
                        <Label Content="Оценка" FontSize="12" FontFamily="Times New Roman" Margin="103,116,0,0" HorizontalAlignment="Left" Width="121" Height="31" VerticalAlignment="Top" Grid.Column="1"/>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="Zapr" Header="Запросы">
                <TabItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="27*"/>
                            <ColumnDefinition Width="103*"/>
                            <ColumnDefinition Width="558*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Выборка по дате" HorizontalAlignment="Left" Margin="4.557,10,0,0" Width="134" Height="28" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <DatePicker Name="datePicker2" IsDropDownOpen="True" SelectedDateFormat="Short" Margin="11,38,0,0" HorizontalAlignment="Left" Width="190" Height="26" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
                        <Button Content="ОК" HorizontalAlignment="Left" Width="65" x:Name="oki" Margin="6,80,0,0" Height="30" VerticalAlignment="Top" Click="oki_Click" Grid.Column="2"/>
                        <Label Content="Выборка по налогу" HorizontalAlignment="Left" Width="134" Margin="4.557,127,0,0" Height="32" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <ComboBox Name="viborusl" Width="169" HorizontalAlignment="Left" Margin="11,159,0,0" Height="26" VerticalAlignment="Top" DropDownOpened="viborusl_DropDownOpened" Grid.ColumnSpan="3" SelectionChanged="viborusl_SelectionChanged"/>
                        <Button Content="ОК" HorizontalAlignment="Left" Width="65" x:Name="okk" Margin="6,196,0,0" Height="30" VerticalAlignment="Top" Click="okk_Click" Grid.Column="2"/>
                        <Label Content="Выборка по клиенту" HorizontalAlignment="Left" Width="146" Margin="4.557,239,0,0" Height="32" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1"/>
                        <Button Content="ОК" HorizontalAlignment="Left" Width="56" x:Name="okkk" Margin="15,308,0,0" Height="26" VerticalAlignment="Top" Click="okkk_Click" Grid.Column="2" />
                        <ComboBox Name="viborpo" Width="163" HorizontalAlignment="Left" Margin="17,271,0,0" Height="26" VerticalAlignment="Top" DropDownOpened="viborpo_DropDownOpened" Grid.ColumnSpan="3" />
                        <DataGrid AutoGenerateColumns="False" x:Name="zapros" Margin="97,10,0,0" HorizontalAlignment="Left" Width="710" Height="324" VerticalAlignment="Top" IsReadOnly="True" Grid.Column="2">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Id}" Header="ID налога" Width="*"/>
                                <DataGridTextColumn Binding="{Binding Nazvanie}" Header="Название налога" Width="*"/>
                                <DataGridTextColumn Binding="{Binding Data}" Header="Дата" Width="*"/>
                                <DataGridTextColumn Binding="{Binding OkazYSL}" Header="Статус налога" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <Label Content="Номер" HorizontalAlignment="Left" x:Name="nomer_Copy" Width="227" FontSize="12" FontFamily="Times New Roman" Height="26" VerticalAlignment="Top"/>

        </TabControl>
    </Grid>
</Window>
